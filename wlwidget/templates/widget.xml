<Module>
 <ModulePrefs title="Hello World!">
 <Require feature="opensocial-0.9" />
 <Require feature="osapi" />
 <Require feature="pubsub" />
 <Require feature="dynamic-height" />
 </ModulePrefs>
 <Content type="html" view="canvas">
 <![CDATA[
<script type="text/javaScript">

    function processMessages(e) {
        var ifr = document.getElementById('weblabIFrame');
        if(e.origin == 'http://cloud.weblab.deusto.es') {
            e.source.postMessage("I'm your parent", e.origin);
        }
    }

    function init() {
       var token = shindig.auth.getSecurityToken();
       var srcString = '{{ url }}?st=' + token;
       document.getElementById('container').innerHTML = '<iframe id="weblabIFrame" frameborder="0" width="100%" height="100%" src="'+srcString+'"></iframe>';
       window.addEventListener('message', processMessages, false);
       gadgets.window.adjustHeight(); //so app resizes itself based on content
    }

    gadgets.util.registerOnLoadHandler(init);
</script>
 <div id="container">
 </div>
 ]]>
</Content>
</Module>
